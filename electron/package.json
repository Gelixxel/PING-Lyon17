{
  "name": "electron",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "concurrently \"wait-on http://localhost:8081 && electron .\" \"java -jar ../ping-back-end/target/ping-back-end-1.0-SNAPSHOT.jar\"",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": {
    "name": "Placeholder",
    "email": "placeholder@example.com"
  },
  "license": "ISC",
  "description": "",
  "dependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "electron-builder": "^25.0.0-alpha.9"
  },
  "build": {
    "appId": "com.ping.app",
    "productName": "Ping",
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../ping-back-end/target/ping-back-end-1.0-SNAPSHOT.jar",
        "to": "./"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "artifactName": "Ping-Setup-${version}.exe"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "maintainer": "placeholder@example.com"
    }
  }
}
